[Unit]
Description=NCID client using the Speak Module
After=ncidd.service

[Service]
Type=simple
Environment=module=ncid-speak speakopt=-M
EnvironmentFile=-/usr/local/etc/ncid/ncidmodules.conf
PIDFile=/var/run/ncid-speak.pid
ExecStart=/usr/bin/ncid --no-gui -p /var/run/${module}.pid -P $module $speakopt
ExecStop=/bin/kill $MAINPID ; /bin/rm -f /var/run/${module}.pid

[Install]
WantedBy=multi-user.target
