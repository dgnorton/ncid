#!/usr/bin/make -f
# Sample debian/rules file - for GNU Hello.
# Copyright 1994,1995 by Ian Jackson.
# I hereby give you perpetual unlimited permission to copy,
# modify and relicense this file, provided that you do not remove
# my name from the file itself.  (I assert my moral right of
# paternity under the Copyright, Designs and Patents Act 1988.)
# This file may have to be extensively modified
#
# Modified by John L. Chmielewski to package ncid

package = ncid
prog    = ncidd

docdir  = debian/root/usr/share/doc/$(package)

build:
	$(checkdir)
	$(MAKE) ubuntu
	touch build

clean:
	$(checkdir)
	rm -f build
	-$(MAKE) -i distclean
	rm -rf *~ debian/root debian/*~ debian/files* debian/substvars

binary-indep:   checkroot build
	$(checkdir)
# There are no architecture-independent files to be uploaded
# generated by this package.  If there were any they would be
# made here.

binary-arch:    checkroot build
	$(checkdir)
	rm -rf debian/root
	install -d debian/root/DEBIAN $(docdir)
	install -m 755 debian/postinst debian/prerm debian/postrm debian/root/DEBIAN
	$(MAKE) \
		prefix=$$(pwd)/debian/root/usr \
		prefix2=$$(pwd)/debian/root \
		prefix3=$$(pwd)/debian/root \
		install install-ubuntu
	cp -a debian/changelog $(docdir)/changelog.Debian
	cp -a README VERSION doc debian/README.Debian $(docdir)
	cp -a cidgate/README.Gateways modules/README.modules $(docdir)
	cp -a scripts/README.logfile tools/README.tools $(docdir)
	rm -f debian/root/$(docdir)/CHANGES
	find debian/root -name \*CVS -print | xargs rm -fr
	gzip -r9 debian/root/usr/share/man
	dpkg-shlibdeps debian/root/usr/sbin/ncidd
	dpkg-gencontrol -isp -Pdebian/root
	chown -R root:root debian/root
	chmod -R u+w,go=rX debian/root
	dpkg --build debian/root ..

define checkdir
	test -f $(prog).c -a -f debian/rules
endef

binary: binary-indep binary-arch

checkroot:
	$(checkdir)
	test $$(id -u) = 0

.PHONY: binary binary-arch binary-indep clean checkroot
